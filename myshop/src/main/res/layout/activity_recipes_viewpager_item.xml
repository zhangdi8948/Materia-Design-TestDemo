<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/recipes_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/recipes_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="recipesIv"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/recipes_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Eggy Guacamole"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/recipes_have"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/demion14"
        android:text="You've got all the ingredients!"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipes_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="25m"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/help"
            android:transitionName="recipesM"/>

        <TextView
            android:id="@+id/recipes_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="200 cal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/help"
            android:transitionName="recipesCal"/>

        <TextView
            android:id="@+id/recipes_per"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 per"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/help"
            android:transitionName="recipesPer"/>

    </LinearLayout>

</LinearLayout>