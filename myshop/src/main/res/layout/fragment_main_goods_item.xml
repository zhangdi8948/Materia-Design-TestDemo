<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:id="@+id/goods_card"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/apple"/>

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:layout_toRightOf="@id/goods_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/goods_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100g - 60Cal"
                android:textSize="14sp"
                android:textColor="@color/demion14"
                android:layout_below="@id/goods_name"
                android:layout_toRightOf="@id/goods_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.example.myshop.common.SlideLeftToCancelView
        android:id="@+id/goods_add"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:elevation="8dp"
        android:background="@drawable/white_circlecorner_rectangle" />

</RelativeLayout>